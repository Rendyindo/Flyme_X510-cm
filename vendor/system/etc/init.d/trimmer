#!/system/bin/sh

LOG=/data/logs/fstrim.log

if [ -e $LOG ]; then
     rm $LOG
fi;

echo "fstrim started at $( date +"%m-%d-%Y %H:%M:%S" )" | tee -a $LOG;

echo "" | tee -a $LOG;

fstrim -v /cache | tee -a $LOG;
fstrim -v /data | tee -a $LOG;
fstrim -v /system | tee -a $LOG;

echo "" | tee -a $LOG;

echo "fstrim finished at $( date +"%m-%d-%Y %H:%M:%S" )" | tee -a $LOG;
